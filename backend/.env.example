# ==========================================
# BABYSU BACKEND ENVIRONMENT CONFIGURATION
# ==========================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

NODE_ENV=development
PORT=5000

# ==========================================
# FIREBASE ADMIN SDK
# ==========================================
# Get these from Firebase Console: https://console.firebase.google.com/
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project-id.firebasestorage.app

# ==========================================
# API KEYS
# ==========================================

# SunoAPI.org (Official Suno AI API via sunoapi.org)
# Get key from: https://docs.sunoapi.org/suno-api/quickstart
SUNO_API_KEY=your_suno_api_key_here
SUNO_BASE_URL=https://api.sunoapi.org
SUNO_MODEL=V4
SUNO_CALLBACK_URL=https://webhook.site/suno-callback

# Google Gemini API (for prompt engineering)
# Get key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI API (for prompt generation)
# Get key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# ==========================================
# STRIPE (PAYMENT PROCESSING)
# ==========================================
# Get keys from: https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here

# ==========================================
# REDIS (QUEUE SYSTEM)
# ==========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Redis Cloud (alternative - uncomment if using)
# REDIS_URL=redis://default:password@host:port

# ==========================================
# JWT & SECURITY
# ==========================================
# Generate a secure random string (e.g., using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))")
JWT_SECRET=generate_a_secure_random_string_here
JWT_EXPIRES_IN=7d

# ==========================================
# CORS
# ==========================================
CORS_ORIGIN=http://localhost:19000,http://localhost:19006,http://localhost:3000,http://localhost:5173

# ==========================================
# RATE LIMITING
# ==========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==========================================
# SUBSCRIPTION LIMITS
# ==========================================
LIMIT_FREE=3
LIMIT_BASIC=20
LIMIT_FAMILY=50
LIMIT_PREMIUM=999999

# ==========================================
# LOGGING
# ==========================================
LOG_LEVEL=debug

# ==========================================
# DEMO MODE (when API credits are low)
# ==========================================
DEMO_MODE=false

# ==========================================
# AUTO-LOGIN (Development/Testing Only)
# ==========================================
# WARNING: Only use for development! Remove in production!
AUTO_LOGIN_EMAIL=your_test_email@example.com
AUTO_LOGIN_PASSWORD=your_test_password
