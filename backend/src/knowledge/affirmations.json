  "integrationGuidelines": {
    "frequency": "2-4 affirmations per song",
    "placement": "Bridge section primarily, also in chorus for emphasis",
    "repetition": "Repeat each affirmation 2-3 times for internalization",
    "delivery": "Clear, confident vocal delivery; slow enough for comprehension",
    "ageAdaptation": {
      "0-2years": "Sung to child by parent, third-person warmth",
      "2-3years": "Transition to second-person, begin first-person in simple songs",
      "3-6years": "Primarily first-person for ownership, powerful declarations"
    },
    "customization": "Select affirmations relevant to song topic (e.g., bedtime songs use safety/love affirmations)",
    "scientificBasis": "First-person affirmations activate self-referential processing in prefrontal cortex, 2x more effective than second-person (research: Cascio et al., Social Cognitive and Affective Neuroscience, 2016)"
  }
