# ==========================================
# BABYSU MOBILE APP ENVIRONMENT CONFIGURATION
# ==========================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ==========================================
# BACKEND API
# ==========================================
# Use your deployed backend URL in production
EXPO_PUBLIC_API_URL=http://localhost:5000/api

# ==========================================
# FIREBASE CLIENT SDK
# ==========================================
# Get these from Firebase Console: https://console.firebase.google.com/
# Project Settings > General > Your apps > Web app config
EXPO_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
EXPO_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project-id.firebasestorage.app
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
EXPO_PUBLIC_FIREBASE_APP_ID=your_app_id

# ==========================================
# STRIPE (CLIENT)
# ==========================================
# Get from: https://dashboard.stripe.com/test/apikeys
EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here

# ==========================================
# GOOGLE OAUTH
# ==========================================
# Get from: https://console.cloud.google.com/apis/credentials
EXPO_PUBLIC_GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com

# ==========================================
# APP CONFIGURATION
# ==========================================
EXPO_PUBLIC_APP_NAME=BabySu
EXPO_PUBLIC_APP_VERSION=1.0.0
EXPO_PUBLIC_ENVIRONMENT=development

# ==========================================
# AUTO-LOGIN (Development/Testing Only)
# ==========================================
# WARNING: Only use for development/testing! Remove in production!
EXPO_PUBLIC_AUTO_LOGIN_EMAIL=your_test_email@example.com
EXPO_PUBLIC_AUTO_LOGIN_PASSWORD=your_test_password
